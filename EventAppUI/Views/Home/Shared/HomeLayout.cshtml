@using System.Security.Claims
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/Kaar-Infotech-Logo.png">
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
   
    <link rel="stylesheet" href="~/css/Home.css"/>
    <!--Bootstrap Icon-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    
    <header class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-white ">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://www.kaarinfotech.com/index.php" target="_blank"><img src="~/Images/Kaar-Infotech-Logo.png" width="75px" height="30px" /></a>
                <a class="navbar-brand" href="#" target="_blank">KAAR Events</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#Menutabs" aria-label="Toggle navigation" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="Menutabs">
                    <ul class="navbar-nav">
                        @if (ViewData["Title"] != null && ViewData["Title"] == "Home")
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-route="Index">Home</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-route="Home">Home</a>
                            </li>
                        }
                       
                       
                            
                        
                        
                        
                      


                    </ul>
                    @if (ViewData["Title"].Equals("Home") && !User.Identity.IsAuthenticated)
                    {
                        <partial name="Nav"></partial>
                    }
                   @*  @if (ViewData["Title"].Equals("Events") && ViewBag.Username!=null) *@
                   @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown w-50">
                                <button class="dropdown-toggle btn btn-transparent" id="navbarDropdown" role="button" data-bs-toggle="dropdown" data-bs-target="#profileDropDown" aria-haspopup="true" aria-expanded="false">
                                   @User.FindFirstValue(ClaimTypes.Name)
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" id="profileDropDown">
                                    <a class="dropdown-item p-1" asp-route="Profile"><i class="bi bi-person-circle me-1"></i>Profile</a>
                   
                                    
                                    <a class="dropdown-item p-1" asp-route="Logout"><i class="bi bi-box-arrow-right text-danger me-1"></i>Sign out</a>
                                </div>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        @RenderBody()
        @RenderSection("Scripts", false)
    </div>


    <script>
        var page = `@ViewData["Title"]`;
        var role = `@User.FindFirstValue(ClaimTypes.Role)`;
        var userId = '@User.FindFirstValue(ClaimTypes.NameIdentifier)'
    
    </script>
    <script src="~/js/Home.js"></script>
    <!-- Jquery -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!--js for bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
